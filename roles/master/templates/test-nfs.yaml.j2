---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: nfs-pv-test
spec:
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  nfs:
    path: {{ nfs_path }}
    server: {{ hostvars['nfs-server'].ansible_host }}

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: nfs-pvc-test
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Gi 